{
  "version": 2,
  "buildCommand": "cd lifeos && rm -rf node_modules package-lock.json && npm install && npm run build",
  "builds": [
    {
      "src": "lifeos/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "FORCE_BUILD": "true"
  }
}
